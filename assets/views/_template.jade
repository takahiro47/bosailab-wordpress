      a(href!='<%- url %>')
        span <%- title %>
    p.excerpt.ellipsis.multiline
  +ui-load-event
  <% } else if (type == 'report') { %>
  .post-header
    .ui-calendar
      time <%- date || "1999/12/31 23:59:59" %>
      .date-icon
        .date-month
        .date-day
        .date-year
  .post-article
    h3.title
      a(href!='<%- url %>')
        span <%- title %>
    p.excerpt.ellipsis
  <% } else if (type == 'project') { %>
  .post-header
    //- サムネイル
    +ui-load-event
  .post-article
    h3.title.ellipsis
      a(href!='<%- url %>')
        span <%- title %>
  .post-footer
  <% } %>

