extends _application
//-
  The Template for displaying all single posts.

  @package WordPress
  @subpackage SFC_Bosalab_2013
  @since 1.0

block article
  .type.type-single

    .ui-single
      //- The loop
      <?php while ( have_posts() ) : the_post(); ?>

      section.post-item
        block post
          article(id!="post-<?php the_ID(); ?>", data-id!="<?php the_ID(); ?>", class!="<?php echo get_post_class(); ?>")
            header.item-header

              //- サムネイル(表示しない)
                .item-thumbnail
                  :php
                    if ( has_post_thumbnail() && ! post_password_required() ) :
                      the_post_thumbnail();
                    endif;

              //- カレンダーアイコン
              .ui-calendar-icon
                time: <?php the_date(); ?>
                .date-icon
                  .date-month: <?php the_time('M'); ?>
                  .date-day: <?php the_time('j'); ?>
                  .date-year: <?php the_time('Y'); ?>
              .ui-calendar-background

              //- タイトル
              <?php if ( is_single() ) : ?>
              h1.item-title: <?php the_title(); ?>
              <?php else : ?>
              h1.item-title: a(href!="<?php the_permalink(); ?>", rel='bookmark'): <?php the_title(); ?>
              <?php endif; ?>

              .item-meta
                <?php twentythirteen_entry_meta(); ?>
                <?php edit_post_link( __( 'Edit', 'twentythirteen' ), '<span class="edit-link">', '</span>' ); ?>

            <?php if ( is_search() ) : ?>
            .item-summary
              <?php the_excerpt(); ?>
            <?php else : ?>
            .item-content
              <?php the_content( __( 'Continue reading <span class="meta-nav">&rarr;</span>', 'twentythirteen' ) ); ?>
              <?php wp_link_pages( array( 'before' => '<div class="page-links"><span class="page-links-title">' . __( 'Pages:', 'twentythirteen' ) . '</span>', 'after' => '</div>', 'link_before' => '<span>', 'link_after' => '</span>' ) ); ?>
            <?php endif; ?>

            footer.item-meta
              <?php if ( comments_open() && ! is_single() ) : ?>
              .item-comments-link
                <?php comments_popup_link( '<span class="leave-reply">' . __( 'Leave a comment', 'twentythirteen' ) . '</span>', __( 'One comment so far', 'twentythirteen' ), __( 'View all % comments', 'twentythirteen' ) ); ?>
              <?php endif; ?>

              <?php if ( is_single() && get_the_author_meta( 'description' ) && is_multi_author() ) : ?>
              <?php get_template_part( 'author-bio' ); ?>
              <?php endif; ?>


      <?php twentythirteen_post_nav(); ?>

      <?php // comments_template(); ?>

      <?php endwhile; ?>

  //-
    #single
      <div id="primary" class="content-area">
        <div id="content" class="site-content" role="main">

          <?php /* The loop */ ?>
          <?php while ( have_posts() ) : the_post(); ?>

            <?php get_template_part( 'content', get_post_format() ); ?>
            <?php twentythirteen_post_nav(); ?>
            <?php comments_template(); ?>

          <?php endwhile; ?>

        </div><!-- #content -->
      </div><!-- #primary -->
