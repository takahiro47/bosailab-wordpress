/* = .ui-calendar
 * ----------------------------------------------------- */

date_width = 120px * 0.35
.ui-calendar
  time
    hidden()
  .date-icon
    z-index 9
    position relative
    width date_width
    height date_width
    background-repeat no-repeat
    background-color #fff
    background-image embedurl(path + 'common/date-' + date_width + '.png')
    border-radius 3px 3px 9px 3px
    .date-month
    .date-day
    .date-year
      position absolute
      left 0
      right 0
      font-weight normal
      line-height 1em
      text-align center
    .date-month
      top 0
      padding 2px 0 3px
      background-color #D35950 //#E8675E
      border-radius 3px 3px 0 0
      color #fff
      font-size 10px
      font-weight bold
    .date-day
      top 17px
      color #555
      font-size 20px
      font-weight bold
    .date-year
      top 45px
      color #555
      font-size 10px


/* = .ui-breadcrumbs
 * ----------------------------------------------------- */

.ui-breadcrumbs // nav
  text-transform uppercase
  & > *
  a
    color #5D5A53
  & > *
    display block
    float left
    margin 0
    font-size 12px
    line-height 38px
    text-shadow 0px 1px 0 #fff
  a
    transition color .15s ease
    &:hover
      color #ac0404
  i
    &.home
    &.arrow
      font-size 14px
      line-height 36px
      color #D2CFC9
      padding-left 2px
    &.home
      // padding-right 7px
    &.arrow
      padding-left 15px
      padding-right 15px
