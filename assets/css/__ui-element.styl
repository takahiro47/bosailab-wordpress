@import '_config'

// コンテナ

max_width = 960px

// 配色

background_color = #f4f7f8
background_color_dark = #e9eaed

font_color = #42413e // #4d3636


// グリーン - #73A2A8
base_color = #799FA4
base_color_current = darken(base_color, 15%)
base_color_hover = darken(base_color, 30%) //#333

sub_color = #F7F3EC
sub_color_edge = darken(sub_color, 2%)

base_text_shadow = 0 -1px rgba(0, 0, 0, .1)

/* = .ui-edit-link
 * ----------------------------------------------------- */

.ui-edit-link
  position absolute
  top 40px
  right @top

// タグ
.ui-tags
  p
  .tag
    display inline-block
    margin 0
    font-size 12px
    font-size 1.2rem
    line-height 18px
  p
    position relative
    margin-right 12px
    top -2px
    border-bottom 2px solid transparent
    border-color #61a7b8
    i
      padding 0
      padding-left 2px
  .tag
    margin 0 5px 5px 0
    padding 0 3px
    border-radius 1px
    background-color #eee8df


/* = .ui-page-loader
 * ----------------------------------------------------- */

.ui-page-loader
  hidden()
  position absolute
  top 0
  left 0
  right @top
  height 86px
  margin 50px
  opacity 0
  transform translate(0px, -200px)
  &.active
    visible()
  .circle
  .message
    position absolute
    top 0
    left 50%
    width 86px
    height @width
    margin-left -(@width/2)
    border-radius 50%
  .circle
    z-index 100
    background-color transparent
    background-image embedurl(path + 'common/page-loader.png')
    background-size cover
    animation spinner 1.2s linear infinite
  .message
    z-index 102
    padding 18px 0
    font-size 13px
    line-height 17px
    text-align center




/* = .ui-load-event
 * ----------------------------------------------------- */

.ui-load-event
  .post-background
  .post-preview
    position absolute
    top 0
    left @top
    bottom @top
    right @top
  .post-background
    z-index 1
    box-shadow inset -1px 1px 0 #eee
    background-color #fff
  .post-preview
    z-index 2
    opacity 0
    background-size cover
    background-position 50% 25%
    transition all .55s ease .15s
    img
      hidden()
