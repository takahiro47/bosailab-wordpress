  // input[type=submit]
  //   overflow visible

  // input[type=checkbox]
  // input[type=radio]
  //   height 13px
  //   width 13px

  .screen-reader-text
    clip rect(1px 1px 1px 1px)

  .site-header
    position relative
    z-index 1

  .main-navigation
    max-width 930px
    padding-right 150px

  .nav-menu
    li
      &
      a
        display block
        float left
    ul
      top 40px
    li
      ul
        ul
          left 100%
          top 0

  .site-header
    .search-form[type=search]
    .search-form[type=text]
      background-color #fff
      border 2px solid #c3c0ab
      cursor text
      height 28px
      outline 0
      width 150px

  .entry-header
  .entry-content
  .entry-summary
  .entry-meta
    width 604px

  .format-status
    .entry-content
    .entry-meta
      padding-left 60px

  .sidebar
    .format-status
      .entry-content
      .entry-meta
        padding-left 60px

    .post-navigation
      .paging-navigation
      .nav-links
        width 604px

  .paging-navigation
    .meta-nav
      padding 0 0 10px
      vertical-align middle
      width 40px

  .comments-title
  .comment-list
  .comment-reply-title
  .comment-respond .comment-form
    width 604px

  .site-footer
    .widget-area
      max-width none
      left auto

.rtl
  .format-audio .entry-content:before
  .comment-reply-link:before
  .comment-reply-login:before
    -ms-filter unquote("FlipH")
    filter unquote("FlipH")

