@import 'setting'


/* = .ui-progress
 * ----------------------------------------------------- */

.ui-progress
  z-index 499
  position fixed
  top -10px
  left 0
  right 0
  height 10px
  &.ui-progress-active
    .progress-bar
      animation stripes .2s linear infinite
  .progress
    border-radius 0
    height 10px
  .progress-bar
    width 100%
    border-radius 0


/* = .ui-edit-link
 * ----------------------------------------------------- */

.ui-edit-link
  position absolute
  top 40px
  right @top

// タグ
.ui-tags
  p
  .tag
    display inline-block
    margin 0
    font-size 12px
    font-size 1.2rem
    line-height 18px
  p
    position relative
    margin-right 12px
    top -2px
    border-bottom 2px solid transparent
    border-color #61a7b8
    i
      padding 0
      padding-left 2px
  .tag
    margin 0 5px 5px 0
    padding 0 3px
    border-radius 1px
    background-color #eee8df


/* = .ui-scrollto
 * ----------------------------------------------------- */

.ui-scrollto
  z-index 3000
  position fixed
  padding 8px
  bottom 15px
  right @bottom
  line-height 0
  opacity 0
  background #000000
  border-radius 2px
  transition opacity .8s
  i
    padding 0 1px
    color #fff
    font-size 13px
    line-height 3px
    text-decoration none
.scroll
  .ui-scrollto
    opacity .6
    &:hover
      opacity 1


/* = .ui-page-loader
 * ----------------------------------------------------- */

.ui-page-loader
  position absolute
  top 0
  left 0
  right @top
  height 86px
  margin 50px
  opacity 0
  transform translate(0px, -200px)
  .circle
  .message
    position absolute
    top 0
    left 50%
    width 86px
    height @width
    margin-left -(@width/2)
    border-radius 50%
  .circle
    z-index 100
    background-color transparent
    background-image embedurl(path + 'common/page-loader.png')
    background-size cover
    animation spinner 1.2s linear infinite
  .message
    z-index 102
    padding 18px 0
    font-size 13px
    line-height 17px
    text-align center


/* = .ui-loader
 * ----------------------------------------------------- */

loader-size = 20px
loader-gutter = (loader-size/10)
loader-transform = loader-size + (loader-gutter*2)
@keyframes u1
  0%
    z-index 1
  50%
    transform translateX(loader-transform)
@keyframes u2
  50%
    transform translateX(- loader-transform)
.ui-loader
  position relative
  width loader-size*3.5
  height loader-size
  margin 0 auto
  border loader-size * .75 solid transparent
  border-radius (loader-size/2)
  i
    &.dot-u1
    &.dot-u2
      position absolute
      top 0
      width loader-size
      height loader-size
      border-radius 100%
    &.dot-u1
      background base_color // #ff2e92
      left - loader-gutter
      animation u1 1.05s ease-in-out infinite
    &.dot-u2
      background sub_color // #007bdc
      right - loader-gutter
      animation u2 1.05s ease-in-out infinite


/* = .ui-load-event
 * ----------------------------------------------------- */

.ui-load-event
  .post-background
  .post-preview
    position absolute
    top 0
    left @top
    bottom @top
    right @top
  .post-background
    z-index 1
    box-shadow inset -1px 1px 0 #eee
    background-color #fff
  .post-preview
    z-index 2
    opacity 0
    background-size cover
    background-position 50% 25%
    transition all .55s ease .15s
    img
      hidden()
  .ui-loader
    z-index 4
    position absolute
    top 50%
    left 50%
    margin-top -15px
    margin-left -35px
    transition all 1.1s ease .15s
.loaded
  .ui-load-event
    .post-preview
      opacity .9
    .ui-loader
      opacity 0

.ui-layer
  z-index 3000
  position fixed
  overflow auto
  overflow-x hidden
  top 0
  bottom @top
  left @top
  right @top
  text-align center
  outline none
  background-color rgba(0, 0, 0, .9)
  .layeer-close-target
    position absolute
    top 0
    bottom @top
    left @top
    right @top
  .layer-content
    position relative
    display inline-block
    vertical-align middle
    min-width 520px
    min-height 338px
    background-color #fff
    border-radius 7px


/* = .ui-calendar
 * ----------------------------------------------------- */

date_width = 120px * 0.35
.ui-calendar
  time
    hidden()
  .date-icon
    z-index 90
    position relative
    width date_width
    height date_width
    background-repeat no-repeat
    background-color #fff
    background-image embedurl(path + 'common/date-' + date_width + '.png')
    border-radius 4px 4px 9px 4px
    .date-month
    .date-day
    .date-year
      position absolute
      left 0
      right 0
      font-weight normal
      line-height 1em
      text-align center
    .date-month
      top 0
      padding 2px 0 3px
      background-color #D35950 //#E8675E
      border-radius 4px 4px 0 0
      color #fff
      font-size 10px
      font-weight bold
    .date-day
      top 17px
      color #555
      font-size 20px
      font-weight bold
    .date-year
      top 45px
      color #555
      font-size 10px


/* = .ui-breadcrumbs
 * ----------------------------------------------------- */

.ui-breadcrumbs // nav
  text-transform uppercase
  & > *
  a
    color #5D5A53
  & > *
    display block
    float left
    margin 0
    font-size 12px
    line-height 38px
    text-shadow 0px 1px 0 #fff
  a
    transition color .15s ease
    &:hover
      color #ac0404
  i
    &.home
    &.arrow
      font-size 14px
      line-height 36px
      color #D2CFC9
      padding-left 2px
    &.home
      // padding-right 7px
    &.arrow
      padding-left 15px
      padding-right 15px


/* = #GalleryBox
 * ----------------------------------------------------- */

gallery_info_width = 360px

// #galleryBox
// #contactBox
.gallery-layer
  hidden()
  opacity 0
  z-index 500
  position fixed
  top 0
  bottom 0
  right 0
  left 0
  padding 32px
  outline none
  overflow auto
  background-color rgba(1, 1, 1, .845)
  transition opacity .25s ease
  &.active
    visible()
    opacity 1
  .gallery-layer__vertical-center
    display table
    height 100%
    width 100%
    .gallery-layer__vertical-center__cell
      display table-cell
      vertical-align middle
      .gallery-layer__content-wrap
        padding 8px 32px
        translate3d(0, 0, 0)
        .gallery-layer__content
          max-width 1080px
          margin 0 auto
          background-color #fdfdfd
          background-clip padding-box
          border-radius 4px
          box-shadow 0 1px 5px rgba(0, 0, 0, .1)
          &.gallery-layer__content--contact
            max-width 720px
          .gallery-layer__close-target--small
            position absolute
            top 0
            left @top
            right @top
            bottom @top
          .gallery-layer__media
            clearfix()
            position relative
            overflow hidden
            width 100%
            height auto
            background-color sub_color
            // border-radius 4px
            box-shadow 0 0 0 1px rgba(0, 0, 0, .2), 0 1px 12px rgba(0, 0, 0, .4)
  .gallery-layer__close
    display block
    position fixed
    top 0
    right 16px
    color #fff
    font-size 30px
    font-weight 700
    font-style normal
    cursor pointer
  .gallery-layer__close-target--large
    position fixed
    top 0
    right 0
    left 0
    bottom 0

.gallery-layer__media
  .gallery-content__info-wrap
    position relative
    float right
    height 100%
    width gallery_info_width
    border-left 1px solid #ddd
    .gallery-content__info
      padding 20px
      .gallery-content__info__header
        clearfix()
        .ui-calendar
          float left
          width 42px
          height @width
          .date-icon
            z-index 510
            .date-month
            .date-day
            .date-year
              z-index 511
        .gallery-content__title
          margin 4px 0 4px 55px
          font-size 17px
          font-weight bold
          word-wrap break-word
          a
            color font_color
        .gallery-content__relative-time-wrap
          margin 4px 0 4px 55px
          .gallery-content__relative-time
            color #aaa
            font-weight bold
        .gallery-content__tags
          margin 0 0 10px 55px
        .gallery-content__edit
          hidden()
      .gallery-content__info__article
        hoge 0
      .gallery-content__info__footer
        position absolute
        bottom 15px
        left @bottom
        right @bottom
        min-height 160px
        .social
          height 95px
          padding 15px
          text-align center
          &:nth-child(1)
          &:nth-child(2)
            padding-top 5px
          &:nth-child(3)
          &:nth-child(4)
            padding-bottom 5px
          &:nth-child(1)
            box-shadow inset -1px 0 0 #fff
          &:nth-child(3)
            box-shadow inset -1px 1px 0 #fff
          &:nth-child(4)
            box-shadow inset 0 1px 0 0 #fff
      .gallery-content__info__close
        cursor pointer
        position absolute
        top 4px
        right 10px
        color #D3D3D3
        font-size 24px
        font-weight bold
        line-height 24px
        text-align center
  .gallery-content__picture-wrap
    position relative
    margin-right gallery_info_width
    height 100%
    .gallery-content__picture
      height 100%
      .ui-load-event
        clearfix()
        .post-preview
          top 0
          right @top
          min-height 240px
          background-size contain
          background-position 50% 50%
          background-repeat no-repeat
        .post-background
          background-color #1B1B1B // #888
          box-shadow none
      .gallery-navigations
        .gallery-navigation
          z-index 300
          opacity 0
          position absolute
          top 50%
          margin-top -(39px + 20px)
          padding 20px
          color #fff
          font-size 75px
          line-height 75px
          text-shadow 0 0 3px rgba(0, 0, 0, .75)
          &:hover
            opacity .9 !important
          &.gallery-navigation--next
            right 0
            padding-left 100px
          &.gallery-navigation--prev
            left 0
            padding-right 100px
      &:hover
      .gallery-navigations
        .gallery-navigation
          opacity .2

