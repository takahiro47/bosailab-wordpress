/* = .ui-page-loader
 * ----------------------------------------------------- */

.ui-page-loader
  position absolute
  top 0
  left 0
  right @top
  height 86px
  margin 50px
  opacity 0
  transform translate(0px, -200px)
  .circle
  .message
    position absolute
    top 0
    left 50%
    width 86px
    height @width
    margin-left -(@width/2)
    border-radius 50%
  .circle
    z-index 100
    background-color transparent
    background-image embedurl(path + 'common/page-loader.png')
    background-size cover
    animation spinner 1.2s linear infinite
  .message
    z-index 102
    padding 18px 0
    font-size 13px
    line-height 17px
    text-align center


/* = .ui-loader
 * ----------------------------------------------------- */

loader-size = 20px
loader-gutter = (loader-size/10)
loader-transform = loader-size + (loader-gutter*2)
@keyframes u1
  0%
    z-index 1
  50%
    transform translateX(loader-transform)
@keyframes u2
  50%
    transform translateX(- loader-transform)
.ui-loader
  position relative
  width loader-size*3.5
  height loader-size
  margin 0 auto
  border loader-size * .75 solid transparent
  border-radius (loader-size/2)
  i
    &.dot-u1
    &.dot-u2
      position absolute
      top 0
      width loader-size
      height loader-size
      border-radius 100%
    &.dot-u1
      background base_color // #ff2e92
      left - loader-gutter
      animation u1 1.05s ease-in-out infinite
    &.dot-u2
      background sub_color // #007bdc
      right - loader-gutter
      animation u2 1.05s ease-in-out infinite


/* = .ui-load-event
 * ----------------------------------------------------- */

.ui-load-event
  .post-background
  .post-preview
    position absolute
    top 0
    left @top
    bottom @top
    right @top
  .post-background
    z-index 1
    box-shadow inset -1px 1px 0 #eee
    background-color #fff
  .post-preview
    z-index 2
    opacity 0
    background-size cover
    background-position 50% 25%
    transition all .55s ease .15s
    img
      hidden()
.ui-loader
  z-index 4
  position absolute
  top 50%
  left 50%
  margin-top -20px
  margin-left -35px
  transition all 1.1s ease .15s
.loaded
  .ui-load-event
    .post-preview
      opacity .9
  .ui-loader
    opacity 0

