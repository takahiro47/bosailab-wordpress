@import 'setting'

/* = .ui-progress
 * ----------------------------------------------------- */
.ui-progress
  z-index 1001
  position fixed
  top -10px
  left 0
  right 0
  height 10px
  &.ui-progress-active
    .progress-bar
      animation stripes .2s linear infinite
  .progress
    border-radius 0
    height 10px
  .progress-bar
    width 100%
    border-radius 0

/* = .ui-edit-link
 * ----------------------------------------------------- */

.ui-edit-link
  position absolute
  top 40px
  right @top

// タグ
.ui-tags
  p
  .tag
    display inline-block
    margin 0
    font-size 12px
    font-size 1.2rem
    line-height 18px
  p
    position relative
    margin-right 12px
    top -2px
    border-bottom 2px solid transparent
    border-color #61a7b8
    i
      padding 0
      padding-left 2px
  .tag
    margin 0 5px 5px 0
    padding 0 3px
    border-radius 1px
    background-color #eee8df

/* = .ui-scrollto
 * ----------------------------------------------------- */
.ui-scrollto
  z-index 3000
  position fixed
  padding 8px
  bottom 15px
  right @bottom
  line-height 0
  opacity 0
  background #000000
  border-radius 2px
  transition opacity .8s
  i
    padding 0 1px
    color #fff
    font-size 13px
    line-height 3px
    text-decoration none
.scroll
  .ui-scrollto
    opacity .6
    &:hover
      opacity 1

/* = .ui-loader
 * ----------------------------------------------------- */
loader-size = 20px
loader-gutter = (loader-size/10)
loader-transform = loader-size + (loader-gutter*2)
@keyframes u1
  0%
    z-index 1
  50%
    transform translateX(loader-transform)
@keyframes u2
  50%
    transform translateX(- loader-transform)
.ui-loader
  position relative
  width loader-size*3.5
  height loader-size
  margin 0 auto
  border loader-size * .75 solid transparent
  border-radius (loader-size/2)
  i
    &.dot-u1
    &.dot-u2
      position absolute
      top 0
      width loader-size
      height loader-size
      border-radius 100%
    &.dot-u1
      background base_color // #ff2e92
      left - loader-gutter
      animation u1 1.05s ease-in-out infinite
    &.dot-u2
      background sub_color // #007bdc
      right - loader-gutter
      animation u2 1.05s ease-in-out infinite

/* = .ui-loader
 * ----------------------------------------------------- */
.ui-load-event
  .post-background
  .post-preview
    z-index 100
    position absolute
    top 0
    left @top
    bottom @top
    right @top
  .post-background
    z-index 100
    box-shadow inset -1px 1px 0 #eee
    background-color #fff
  .post-preview
    z-index 101
    opacity 0
    background-size cover
    background-position 50% 25%
    transition all .55s ease .15s
    img
      hidden()
  .ui-loader
    z-index 300
    position absolute
    top 50%
    left 50%
    margin-top -15px
    margin-left -35px
    transition all 1.1s ease .15s
.loaded
  .ui-load-event
    .post-preview
      opacity 1
    .ui-loader
      opacity 0

.ui-layer
  hidden()
  display table
  table-layout fixed
  position absolute
  top 0
  left 0
  right 0
  z-index 2000
  min-height 100%
  min-width 960px
  height 100% !important
  width 100%
  outline none
  background-color rgba(0, 0, 0, .9)
  ._n1
    display table-cell
    text-align center
    vertical-align middle
    width 100%
    ._n2
      display inline-block
      margin 20px
      text-align left
      .ui-context-layer-parent
        position relative
        .ui-context-layer
          zoom 1
          width 960px
          height 0
          background #fff

/* = .ui-calendar
 * ----------------------------------------------------- */
date_width = 120px * 0.35
.ui-calendar
  time
    hidden()
  .date-icon
    z-index 200
    position relative
    width date_width
    height date_width
    background-repeat no-repeat
    background-color #fff
    background-image embedurl(path + 'common/date-' + date_width + '.png')
    border-radius 4px 4px 9px 4px
    .date-month
    .date-day
    .date-year
      z-index 201
      position absolute
      left 0
      right 0
      font-weight normal
      line-height 1em
      text-align center
    .date-month
      top 0
      padding 2px 0 3px
      background-color #D35950 //#E8675E
      border-radius 4px 4px 0 0
      color #fff
      font-size 10px
      font-weight bold
    .date-day
      top 17px
      color #555
      font-size 20px
      font-weight bold
    .date-year
      top 45px
      color #555
      font-size 10px