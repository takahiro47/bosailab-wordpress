@import 'config'



/* = .ui-progress
 * ----------------------------------------------------- */

.ui-progress
  z-index 499
  position fixed
  top -10px
  left 0
  right 0
  height 10px
  &.ui-progress-active
    .progress-bar
      animation stripes .2s linear infinite
  .progress
    border-radius 0
    height 10px
  .progress-bar
    width 100%
    border-radius 0


/* = .ui-edit-link
 * ----------------------------------------------------- */

.ui-edit-link
  position absolute
  top 40px
  right @top

// タグ
.ui-tags
  p
  .tag
    display inline-block
    margin 0
    font-size 12px
    font-size 1.2rem
    line-height 18px
  p
    position relative
    margin-right 12px
    top -2px
    border-bottom 2px solid transparent
    border-color #61a7b8
    i
      padding 0
      padding-left 2px
  .tag
    margin 0 5px 5px 0
    padding 0 3px
    border-radius 1px
    background-color #eee8df


/* = .ui-scrollto
 * ----------------------------------------------------- */

.ui-scrollto
  z-index 3000
  position fixed
  padding 8px
  bottom 15px
  right @bottom
  line-height 0
  opacity 0
  background #000000
  border-radius 2px
  transition opacity .8s
  i
    padding 0 1px
    color #fff
    font-size 13px
    line-height 3px
    text-decoration none
.scroll
  .ui-scrollto
    opacity .6
    &:hover
      opacity 1


/* = .ui-page-loader
 * ----------------------------------------------------- */

.ui-page-loader
  hidden()
  position absolute
  top 0
  left 0
  right @top
  height 86px
  margin 50px
  opacity 0
  transform translate(0px, -200px)
  &.active
    visible()
  .circle
  .message
    position absolute
    top 0
    left 50%
    width 86px
    height @width
    margin-left -(@width/2)
    border-radius 50%
  .circle
    z-index 100
    background-color transparent
    background-image embedurl(path + 'common/page-loader.png')
    background-size cover
    animation spinner 1.2s linear infinite
  .message
    z-index 102
    padding 18px 0
    font-size 13px
    line-height 17px
    text-align center


/* = .ui-loader
 * ----------------------------------------------------- */

loader-size = 20px
loader-gutter = (loader-size/10)
loader-transform = loader-size + (loader-gutter*2)
@keyframes u1
  from
    display inline-block
  to
    background-color sub_color
    translate(loader-transform, 0)
@keyframes u2
  from
    display inline-block
  to
    background-color base_color
    translate(- loader-transform, 0)
.ui-loader
  clearfix()
  position relative
  width loader-size*3.5
  height loader-transform
  margin 0 auto
  text-align center
  // border loader-size * .75 solid transparent
  i
    &.dot-u1
    &.dot-u2
      display inline-block
      width loader-size
      height loader-size
      margin loader-gutter
      border-radius 50%
    &.dot-u1
      background-color base_color // #ff2e92
      animation u1 .95s ease-in-out  infinite alternate
    &.dot-u2
      background-color sub_color // #007bdc
      animation u2 .95s ease-in-out  infinite alternate


/* = .ui-load-event
 * ----------------------------------------------------- */

.ui-load-event
  .post-background
  .post-preview
    position absolute
    top 0
    left @top
    bottom @top
    right @top
  .post-background
    z-index 1
    box-shadow inset -1px 1px 0 #eee
    background-color #fff
  .post-preview
    z-index 2
    opacity 0
    background-size cover
    background-position 50% 25%
    transition all .55s ease .15s
    img
      hidden()
.ui-loader
  z-index 4
  position absolute
  top 50%
  left 50%
  margin-top -10px
  margin-left -35px
  transition all 1.1s ease .15s
.loaded
  .ui-load-event
    .post-preview
      opacity .9
  .ui-loader
    opacity 0

/* = .ui-calendar
 * ----------------------------------------------------- */

date_width = 120px * 0.35
.ui-calendar
  time
    hidden()
  .date-icon
    z-index 9
    position relative
    width date_width
    height date_width
    background-repeat no-repeat
    background-color #fff
    background-image embedurl(path + 'common/date-' + date_width + '.png')
    border-radius 4px 4px 9px 4px
    .date-month
    .date-day
    .date-year
      position absolute
      left 0
      right 0
      font-weight normal
      line-height 1em
      text-align center
    .date-month
      top 0
      padding 2px 0 3px
      background-color #D35950 //#E8675E
      border-radius 4px 4px 0 0
      color #fff
      font-size 10px
      font-weight bold
    .date-day
      top 17px
      color #555
      font-size 20px
      font-weight bold
    .date-year
      top 45px
      color #555
      font-size 10px


/* = .ui-breadcrumbs
 * ----------------------------------------------------- */

.ui-breadcrumbs // nav
  text-transform uppercase
  & > *
  a
    color #5D5A53
  & > *
    display block
    float left
    margin 0
    font-size 12px
    line-height 38px
    text-shadow 0px 1px 0 #fff
  a
    transition color .15s ease
    &:hover
      color #ac0404
  i
    &.home
    &.arrow
      font-size 14px
      line-height 36px
      color #D2CFC9
      padding-left 2px
    &.home
      // padding-right 7px
    &.arrow
      padding-left 15px
      padding-right 15px
