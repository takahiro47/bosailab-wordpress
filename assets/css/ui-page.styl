@import 'setting'

/* = 静的ページ
 * ------------------------------------------------------------ */
.ui-page
  // 投稿アイテム個別ビュー
  section.post
    position relative
    article.post-article
      padding 0
      section.post-section
        position relative
        margin-bottom 0
        padding 30px 0 50px

        // 背景色
        &:nth-child(even)
          background-color lighten(sub_color, 0%)
        &:nth-child(odd)
          background-color transparent

        // 画像背景
        .img-background-frame
          z-index -1
          overflow hidden
          position absolute
          top -35px
          left 0
          right @left
          .img-background // img
            min-width 1440px

        // 画像タイトル
        hgroup.page-subtitle
          h2
            margin 0
            padding 20px 0
            text-align center
            text-transform uppercase
            .img-responsive // img
              margin 0 auto
          // 教授の顔
          .face
            height 200px
            width @height
            margin 20px auto 0
            background-color #fff
            background-size cover
            background-position 50% 25%
            border-radius 50%
            box-shadow 1px 4px 0 #e7e7e7, -1px -1px 0 #e7e7e7
            transition all .25s ease

        // テキスト共通
        p.text-field
        .text-field-custom
          margin 20px auto
          width 100%
          max-width 860px
          color #333
          font-size 1.333em
          line-height 1.688
          text-align center
          text-decoration none

        // メンバー一覧
        .text-field-custom
          .face
            width 100%
            max-width 720px
            height 320px
            margin 10px auto
            background-color #fff
            background-size cover
            background-position 50% 50%
            box-shadow 1px 4px 0 #e7e7e7, -1px -1px 0 #e7e7e7
            transition all .25s ease
          .members
            clearfix()
            .member
              padding-bottom 4px
              line-height 1.2
              text-align justify
              h4
                margin 16px 0 4px
                text-align center
                text-transform uppercase
                letter-spacing .1em
              span
                font-size .8em

        // アクセス
        #map_canvas
          height 350px
          margin-top 20px
          margin-bottom 40px
        .access
          margin 20px auto
          p
            font-size .9em
            line-height 1.688
            strong
              display block
              font-size 1.333em
              padding-bottom 1px
            i
              padding-right 4px
          i.fa-map-marker
            font-size 3.7em

      .wpcf7
        width 75%
        margin 0 auto 40px
        padding 30px 100px
        background sub_color
        form.wpcf7-form
          & > hgroup
            margin-bottom 40px
            text-align center
            h2
            p
              color base_color
              font-weight bold
            h2
              font-size 36px
              text-transform uppercase
            p
              font-size 15px
          & > p
            margin 0 40px 20px
            font-size 14px
            font-weight bold
            span.wpcf7-form-control-wrap
              span.wpcf7-not-valid-tip
                padding 2px 0 0
                color #C0392B
              input
              textarea
                display block
                width 100%
                height 34px
                padding 6px 12px
                font-size 14px
                line-height 1.42857143
                color #555
                background-color #FFF
                background-image none
                border none
                border-radius 2px
                box-shadow inset 0 1px 1px rgba(0, 0, 0, .07)
                transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
              textarea
                height 200px
                max-height 200px
                min-height 200px
                resize none
            input.wpcf7-submit
              user-select()
              cursor pointer
              vertical-align middle
              padding 10px 40px
              margin 0
              color #FFF
              font-size 17px
              line-height 1.1em
              font-weight normal
              text-align center
              white-space normal
              background-color base_color
              border none
              border-radius 2px
              transition border .25s linear, color .25s linear, background-color .25s linear
          .wpcf7-response-output
            display block
            margin 30px 40px
            padding 10px
            color #fff
            font-size 13px
            font-weight bold
            text-align center
            border none
            border-radius 2px
            background-color transparent
            &.wpcf7-mail-sent-ok
              background-color #2980B9
            &.wpcf7-mail-sent-ng
              background-color #C0392B
            &.wpcf7-spam-blocked
              background-color #C0392B
            &.wpcf7-validation-errors
              background-color #C0392B