/* = Settings
 * ------------------------------------------------------------ */

support-for-ie ?= true
path = '/content/themes/bosai/public/images/'

background_color = #FCFBFB
font_color = #4d3636

// グリーン - #73A2A8
base_color = #799FA4
base_color_current = darken(base_color, 20%)
base_color_hover = #333
// ベージュ
sub_color = #F7F3EC
sub_color_edge = darken(sub_color, 2%)

base_text_shadow = 0 -1px rgba(0, 0, 0, .1)


/* = Minins
 * ------------------------------------------------------------ */

clearfix()
  &:before
  &:after
    content ' '
    display table
  &:after
    clear both

user-select()
  -moz-user-select -moz-none
  -khtml-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none

sc-view()
  cursor default
  overflow hidden
  border solid 0 rgba(0, 0, 0, 0)
  user-select()
  -webkit-touch-callout none
  -webkit-tap-highlight-color rgba(0,0,0,0)

// 文字詰め
ellipsis()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  &.multiline
    white-space normal

// 文字省略
omission()
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

// 非表示
hidden()
  display none
  visibility hidden
show()
  display block
  visibility visible

// フォント
font-reset()
  font-family Lato, 'Helvetica Neue', sans-serif, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro W3', 'メイリオ', 'Meiryo UI', 'MS PGothic'
font-helvetica()
  font-family 'Helvetica Neue', Helvetica, Arial, 'hiragino kaku gothic pro', meiryo, 'ms pgothic', sans-serif
font-helvetica-ultra()
  font-family 'HelveticaNeueLight'

background-blurred()
  background-color #2C4347
  background-image url('/images/blurred-bkg.png')
  background-size cover
  background-position 50% 50%

cover()
  background-size cover
  background-position 50% 25%

contain()
  background-repeat no-repeat
  background-size contain
  background-position 50% 0%

background-clip-padding-box()
  -webkit-background-clip padding-box
  -moz-background-clip padding
  background-clip padding-box

background-size(n)
  // cover, etc
  -webkit-background-size n
  -moz-background-size n
  -o-background-size n
  background-size n

navi-background(color)
  background-color color
  // background-image linear-gradient(
  //   top, lighten(color, 10%) 0%, color 50%, darken(color, 10%) 100%
  // )

/* = Animations
 * ------------------------------------------------------------ */

@keyframes stripes
  from
    background-position: 40px 0
  to
    background-position: 0 0

@keyframes spinner
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)

@keyframes poof
  0%
    transform rotate(0deg)
  25%
    transform rotate(-20deg)
  75%
    transform rotate(20deg)
  100%
    transform rotate(0deg)

@keyframes fadeInFrame
  0%
    hidden()
    opacity 0 !important
  1%
    show()
    opacity 0 !important
  100%
    show()
    opacity 1 !important

@keyframes fadeOutFrame
  0%
    show()
    opacity 1 !important
  99%
    show()
    opacity 0 !important
  100%
    hidden()
    opacity 0 !important
