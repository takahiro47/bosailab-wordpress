/* = Settings
 * ------------------------------------------------------------ */

support-for-ie ?= true
path = '/content/themes/bosai/public/images/'

max_width = 960px
//1080px

body_background = #FFF
// lighten(#E9EAED, 85%)
background_color = #FCFBFB
font_color = #4d3636

// グリーン - #73A2A8
base_color = #799FA4
base_color_current = darken(base_color, 15%)
base_color_hover = darken(base_color, 30%)
//#333
// ベージュ
sub_color = #F7F3EC
sub_color_edge = darken(sub_color, 2%)

base_text_shadow = 0 -1px rgba(0, 0, 0, .1)


/* = Minins
 * ------------------------------------------------------------ */

clearfix()
  &:before
  &:after
    content ' '
    display table
  &:after
    clear both

user-select()
  -moz-user-select -moz-none
  -khtml-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none

sc-view()
  cursor default
  overflow hidden
  border solid 0 rgba(0, 0, 0, 0)
  user-select()
  -webkit-touch-callout none
  -webkit-tap-highlight-color rgba(0,0,0,0)

// 文字詰め
ellipsis()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  &.multiline
    white-space normal

// 文字省略
omission()
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

// 非表示
hidden()
  display none
  visibility hidden
visible()
  display block
  visibility visible

// フォント
font-reset()
  font-family Lato, 'Helvetica Neue', sans-serif, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro W3', 'メイリオ', 'Meiryo UI', 'MS PGothic'
font-helvetica()
  font-family 'Helvetica Neue', Helvetica, Arial, 'hiragino kaku gothic pro', meiryo, 'ms pgothic', sans-serif
font-helvetica-ultra()
  font-family 'HelveticaNeueLight'

background-blurred()
  background-color #2C4347
  background-image url('/images/blurred-bkg.png')
  background-size cover
  background-position 50% 50%

cover()
  background-size cover
  background-position 50% 25%

contain()
  background-repeat no-repeat
  background-size contain
  background-position 50% 0%

background-clip-padding-box()
  -webkit-background-clip padding-box
  -moz-background-clip padding
  background-clip padding-box

background-size(n)
  // cover, etc
  -webkit-background-size n
  -moz-background-size n
  -o-background-size n
  background-size n

navi-background(color)
  background-color color
  // background-image linear-gradient(
  //   top, lighten(color, 10%) 0%, color 50%, darken(color, 10%) 100%
  // )

zoom-in()
  cursor pointer
  cursor -webkit-zoom-in
  cursor zoom-in

button-pink()
  width 100%
  margin 10px 0
  padding 13px 30px
  font-size 13px
  letter-spacing .1em
  text-align center
  text-transform uppercase
  background-color #e76860
  border-radius 2px
  box-shadow 0 2px 0 #c65953
  transition all .15s ease
  &:hover
    background-color lighten(#E76860, 7%)
  &:active
    background-color lighten(#E76860, 14%)
    box-shadow inset 0px 2px 0 #C65953

/* = Animations
 * ------------------------------------------------------------ */

@keyframes stripes
  from
    background-position 40px 0
  to
    background-position 0 0

@keyframes spinner
  0%
    rotate(0deg)
  50%
    rotate(180deg)
  100%
    rotate(360deg)

@keyframes poof
  0%
    rotate(0deg)
  25%
    rotate(-20deg)
  75%
    rotate(20deg)
  100%
    rotate(0deg)

@keyframes fadeInFrame
  0%
    hidden()
    opacity 0 !important
  1%
    visible()
    opacity 0 !important
  100%
    visible()
    opacity 1 !important

@keyframes fadeOutFrame
  0%
    visible()
    opacity 1 !important
  99%
    visible()
    opacity 0 !important
  100%
    hidden()
    opacity 0 !important
