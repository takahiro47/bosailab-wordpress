@import 'setting'

/* = Plugin Styles
 * ------------------------------------------------------------ */

#api
  hidden()


/* = 言語スイッチャー
 * ------------------------------------------------------------ */

#lang_sel_footer
  padding 3px 0
  background-color transparent
  border none
  ul
    clearfix()
    width 100%
    max-width 960px
    margin 0 auto
    li
      display inline-block
      margin 0
      &:before
      &:after
        content none
      a
        display inline-block
        padding 5px 10px
        color #799fa4
        font-size 11px
        font-weight bold
        line-height 1
        img
          top -1px
          width 22px
          height 16px
          padding 2px
        span
          &.icl_lang_sel_current
          &.icl_lang_sel_native
          &.icl_lang_sel_translated
            hidden()


/* = お問い合わせフォーム
 * ------------------------------------------------------------ */

.wpcf7
  .screen-reader-response
    hidden()
  form.wpcf7-form
    & > p
      span.wpcf7-form-control-wrap
        span.wpcf7-not-valid-tip
          padding 2px 0 0
          color #C0392B
        input
        textarea
          display block
          width 100%
          height 34px
          padding 6px 12px
          font-size 14px
          line-height 1.42857143
          color #555
          background-color #FFF
          background-image none
          border none
          border-radius 2px
          box-shadow inset 0 1px 1px rgba(0, 0, 0, .07)
          transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
        textarea
          height 200px
          max-height 200px
          min-height 200px
          resize none
      input.wpcf7-submit
        user-select()
        cursor pointer
        vertical-align middle
        padding 10px 40px
        margin 0
        color #FFF
        font-size 17px
        line-height 1.1em
        font-weight normal
        text-align center
        white-space normal
        background-color base_color
        border none
        border-radius 2px
        transition all .25s linear
    .wpcf7-response-output
      display block
      margin 30px 40px
      padding 10px
      color #fff
      font-size 13px
      font-weight bold
      text-align center
      border none
      border-radius 2px
      background-color transparent
      &:before
        border 0 solid rgba(0, 0, 0, 0)
      &.wpcf7-mail-sent-ok
        background-color #2980B9
        &:before
          border-bottom-color #2980B9
      &.wpcf7-mail-sent-ng
        background-color #C0392B
        &:before
          border-bottom-color #C0392B
      &.wpcf7-spam-blocked
        background-color #C0392B
        &:before
          border-bottom-color #C0392B
      &.wpcf7-validation-errors
        background-color #C0392B
        &:before
          border-bottom-color #C0392B

