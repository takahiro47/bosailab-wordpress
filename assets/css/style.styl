/* = Global
 * ------------------------------------------------------------ */

body
  position relative
  -webkit-font-smoothing antialiased
  color font_color
  font-size 13px
  font-weight normal
  font-reset()
  // background-image url(path + 'page-bg-tile.jpg')
  // background-repeat repeat

h1
h2
h3
h4
h5
h6
  font-reset()

a
  &
  &:visited
    color #AC0404
  &:hover
    color #CA3C08
    text-decoration none
    transition color 0s ease

/* = 共通UI
 * ------------------------------------------------------------ */
date_width = 120px * 0.35
.ui-calendar-icon
  .date-icon
    z-index 200
    position relative
    width date_width
    height date_width
    background-repeat no-repeat
    background-image embedurl(path + 'common/date-' + date_width + '.png')
    // background-size date_width date_width
    .date-month
    .date-day
    .date-year
      z-index 201
      position absolute
      left 0
      right 0
      font-weight normal
      line-height 1em
      text-align center
    .date-month
      top 1px
      color #fff
      font-size 10px
      font-weight bold
    .date-day
      top 18px
      font-size 16px
    .date-year
      top 44px
      color #555
      font-size 10px
  time
    hidden()

/* = 開発用プレビュー
 * ------------------------------------------------------------ */

dev_height = 15360px * 1.1
dev_width = 1980px * 1.1
.ui-dev
  // hidden()
  position absolute
  top -10px
  top -1280px
  left 50%
  z-index -1
  opacity .35
  overflow hidden
  width 960px
  height dev_height
  margin-left -480px
  .preview
    width dev_width
    height dev_height
    margin-left -((dev_width - 960px)/2)
    background-image url(path + '../../_/doc/okilab-web-v1.1.png')
    background-size dev_width dev_height
    background-repeat no-repeat

