    //   content '■'
    //   padding-right .5em
    //   color #8DB95C
  h1
    font-size 2.15em * markdown-zoom
    line-height 1.40em
    margin-top @font-size
    &:before
      color base_color
  h2
    font-size 1.70em * markdown-zoom
    line-height 1.50em
    margin-top 1.50em
    &:before
      color #C54A48
  h3
    font-size 1.40em * markdown-zoom
    line-height @font-size
  h4
    font-size 1.30em * markdown-zoom
    line-height @font-size
  h5
    font-size 1.20em * markdown-zoom
    line-height @font-size
  h6
    font-size 1.10em * markdown-zoom
    line-height @font-size
  p
    display block
    margin .7em 0 1.4em
    font-size 13px
    line-height 1.6em
    word-wrap break-word
  strong
    font-weight bold
  em
    font-style italic
  blockquote
    display block
    -webkit-margin-before 1em
    -webkit-margin-after 1em
    -webkit-margin-start 40px
    -webkit-margin-end 40px
  ul
  ol
    margin 0 0 24px 0
    padding-left 40px
    li
      margin-bottom 8px
      font-size 13px
      & > ul
      & > ol
        margin 0 0 0 20px
  ul
    list-style disc
  ol
    list-style decimal
  img
    -ms-interpolation-mode bicubic
    border 0
    vertical-align middle
  legend
    white-space normal
  button
  input
  select
  textarea
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
  button
  input[type='reset']
  input[type='submit']
    @extend .btn
    @extend .btn-default
  input[type='submit']
    @extend .btn-danger
  form
    @extend .form-horizontal
    margin 60px 180px
    input[type='text']
    input[type='email']
    input[type='password']
    select
    textarea
      @extend .form-control
    input
      outline 0
      display inline-block
      font-size 1.1em
      border-radius 1px
  table
    @extend .table
    // @extend .table-striped
    // @extend .table-condensed
    // @extend .table-hover
    margin .7em 0 1.4em
    tr
      th
        @extend .table > thead > tr > th
      &:nth-child(even)
        td
          background-color #f9f9f9
  blockquote
    margin .5em 20px
    padding 1px 15px
    p
      font-size
  img
    max-width 100%
    height auto
    &.aligncenter
      display block
      margin 0 auto
    &.alignright
      float right
      margin 0 0 30px 30px
    &.alignleft
      float left
      margin 0 30px 30px 0
    &[class*="wp-image-"]
    &[class*="attachment-"]
      max-width 100%
      height auto


