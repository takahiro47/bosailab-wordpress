/* = Fonts
 * ------------------------------------------------------------ */

$fa-font-path = '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/fonts/'
$fa-version ?= ''

@font-face
  font-family 'FontAwesome'
  src url($fa-font-path + 'fontawesome-webfont.eot?v=' + $fa-version)
  src url($fa-font-path + 'fontawesome-webfont.eot?#iefix&v=' + $fa-version) format('embedded-opentype'),
    url($fa-font-path + 'fontawesome-webfont.woff?v=' + $fa-version) format('woff'),
    url($fa-font-path + 'fontawesome-webfont.ttf?v=' + $fa-version) format('truetype'),
    url($fa-font-path + 'fontawesome-webfont.svg?v=' + $fa-version + '#fontawesomeregular') format('svg')
  font-weight normal
  font-style normal

$fa-font-path = '/fonts/'
$fa-version ?= ''

@font-face
  font-family 'HelveticaNeueUltraLight'
  src url($fa-font-path + 'helveticaneueultralight-webfont.eot')
  src local('☺'),
    url($fa-font-path + 'helveticaneueultralight-webfont.woff') format('woff'),
    url($fa-font-path + 'helveticaneueultralight-webfont.ttf') format('truetype'),
    url($fa-font-path + 'helveticaneueultralight-webfont.svg#webfontfOyiCJQU') format('svg')
  font-weight normal
  font-style normal


/* = Animations
 * ------------------------------------------------------------ */

@keyframes stripes
  from
    background-position 40px 0
  to
    background-position 0 0

@keyframes spinner
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)

@keyframes poof
  0%
    transform rotate(0deg)
  25%
    transform rotate(-20deg)
  75%
    transform rotate(20deg)
  100%
    transform rotate(0deg)

@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)


/* = Global
 * ------------------------------------------------------------ */

::selection
  background-color #e6e6e6
::-moz-selection
  background-color #e6e6e6

body
  position relative
  -webkit-font-smoothing antialiased
  color font_color
  font-size 13px
  font-weight normal
  font-reset()
