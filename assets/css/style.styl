/* = Settings
 * ------------------------------------------------------------ */
support-for-ie ?= true
path = '/bosai/content/themes/bosai/public/images/'

// ベージュ
header_background = #F7F3EC
// グリーン - #7B9FA4
navi_background = #7A9FA3
// グレー
font_color = #64615A

/* = Minins
 * ------------------------------------------------------------ */

user-select()
  -moz-user-select -moz-none
  -khtml-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none

sc-view()
  cursor default
  overflow hidden
  border solid 0 rgba(0, 0, 0, 0)
  user-select()
  -webkit-touch-callout none
  -webkit-tap-highlight-color rgba(0,0,0,0)

// 文字詰め
ellipsis()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  &.multiline
    white-space normal

omission()
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

hidden()
  display none
  visibility hidden

font-reset()
  font-family Lato, "Helvetica Neue", sans-serif, "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro W3", "メイリオ", "Meiryo UI", "MS PGothic"

font-helvetica()
  font-family 'HelveticaNeueLight'

background-blurred()
  background-color #2C4347
  background-image url('/images/blurred-bkg.png')
  background-size cover
  background-position 50% 50%

background-clip-padding-box()
  -webkit-background-clip padding-box
  -moz-background-clip padding
  background-clip padding-box

background-size(n)
  // cover, etc
  -webkit-background-size n
  -moz-background-size n
  -o-background-size n
  background-size n

/* = Animations
 * ------------------------------------------------------------ */

@keyframes stripes
  from
    background-position: 40px 0
  to
    background-position: 0 0

@keyframes spinner
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)

@keyframes poof
  0%
    transform rotate(0deg)
  25%
    transform rotate(-20deg)
  75%
    transform rotate(20deg)
  100%
    transform rotate(0deg)

