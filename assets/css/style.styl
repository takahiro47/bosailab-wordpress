/* = Global
 * ------------------------------------------------------------ */

body
  position relative
  -webkit-font-smoothing antialiased
  color font_color
  font-size 13px
  font-weight normal
  font-reset()
  // font-helvetica()
  // background #f0eae1
  // background background_color
  // background-image url(path + 'page-bg-tile.jpg')
  // background-repeat repeat

h1
h2
h3
h4
h5
h6
  font-reset()

a
  &
  &:visited
    color #AC0404
  &:hover
    color #CA3C08
    text-decoration none
    transition color 0s ease

input
textarea
  outline 0

// 透明度
.fade
  opacity 1 !important

// 非表示
.hidden
  hidden()

.on
  animation fadeInFrame .8s linear
.off
  animation fadeOutFrame .8s linear

/* = 開発用プレビュー
 * ------------------------------------------------------------ */

dev_height = 15360px * 1.1
dev_width = 1980px * 1.1
.ui-dev
  hidden()
  position absolute
  top -10px
  top -8151px
  left 50%
  z-index -1
  opacity .35
  overflow hidden
  width 960px
  height dev_height
  margin-left -480px
  .preview
    width dev_width
    height dev_height
    margin-left -((dev_width - 960px)/2)
    background-image url(path + '../../_/doc/okilab-web-v1.1.png')
    background-size dev_width dev_height
    background-repeat no-repeat


