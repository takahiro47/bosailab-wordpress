// 全体コンテナ
.ui-container
  background transparent

// ヘッダ
header.ui-header
  position relative
  z-index 1000
  width 100%
  margin 0

  &.fixed
    position fixed
    top 0
    background-color navi_background

  .ui-logo
  .ui-public-relaions
  .ui-navi
  .ui-breadcrumbs
    clearfix()
    display block
    position relative
    width 960px
    margin 0 auto

  // サイトタイトル
  .ui-logo
    margin-top 20px
    .home-link
      display block
      min-height 80px
      height 80px
      width 160px
      margin 5px auto
      padding 0
      .site-title
        display block
        height 100%
        width 100%
        margin 0
        padding 0
        font-size 13px
        font-weight normal
        text-align center
        text-indent -9000em
        overflow hidden
        background transparent url(path + 'logo-1x.png') no-repeat 20px 0
        transition all .25s ease-in-out
        &:hover
          opacity .7
      .site-description
        display none

  // 広報スライダー
  .ui-public-relaions
    background-color header_background
    .public-relaion-aritcle
      height 300px

  // ナビメニュー
  .ui-navi
    transition all .25s ease
    nav.navigation
      clearfix()
      position relative
      width 960px
      min-height 35px
      background-color navi_background
      background-image linear-gradient(top, #7EA4A8 0%, #7A9FA3 50%, #779CA0 100%)

      // 検索窓
      .ui-navi-search
        position relative
        display block
        float right
        width (960px - 127px * 6)
        form
          label
            float right
            margin 4px
            margin-left 5px
            input.search-field
              -webkit-font-smoothing antialiased
              width 187px
              height 23px
              margin 2px
              padding 0 8px
              padding-right 25px
              background-color #fff
              border-width 0
              color #6A7180 // #141823
              font-size 14px
              line-height 23px
              border-radius 4px
              box-shadow inset -1px -1px 0 #eee, inset 1px 1px 0 #eee
              &:focus
                border-width 0
          p.search-icons
            position absolute
            top 8px
            right 11px
            margin 0
            span
              color #E9EAED
            i.fa
              cursor pointer
              padding-left 3px
              color #A7ACB5
        input.search-submit
          hidden()

      // メニュー
      .ui-navi-menu
        .menu-header-container
          width (127px * 6)
          ul#menu-header
            clearfix()
            padding 0
            li
              display block
              float left
              width 127px
              text-align center
              a
                padding 9px 10px 11px
                color #fff
                font-size 14px
                line-height 16px
                text-shadow 0 -1px rgba(0, 0, 0, .1)
                transition all .25s ease-in-out
              &:hover > a
              a:hover
                background-color #333
            .current_page_item > a
            .current_page_ancestor > a
            .current-menu-item > a
            .current-menu-ancestor > a
              color #141412
                text-decoration none
      // 現在位置の矢印
      arrow_hover = #333
      .ui-navi-arrow
        hidden()
        position absolute
        background-color navi_background
        bottom -8px
        left (127px/2 - 12px/2) // + 127px * x
        width 12px
        height 8px
        box-shadow 0 4px 3px rgba(0, 0, 0, 0.07)
        border-bottom-right-radius 400px 300px
        border-bottom-left-radius 400px 300px
        transition all .25s ease
        &:before
        &:after
          position absolute
          content ''
          top -5px
          height 23px
          width 23px
          border-style solid
          border-width 5px
          border-radius 100%
          background-color rgba(0, 0, 0, 0)
        &:before
          border-color rgba(0, 0, 0, 0) navi_background rgba(0, 0, 0, 0) rgba(0, 0, 0, 0)
          transform rotate(300deg)
          left -19px
        &:after
          border-color rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) navi_background
          transform rotate(-300deg)
          right -19px

  // パン屑
  .ui-breadcrumbs-background
    background-color header_background
    .ui-breadcrumbs
      text-transform uppercase
      nav.breadcrumbs
        *
          font-size 12px
          font-weight bold
          line-height 36px
        i
          padding 0 15px

// メイン
.ui-contents
  width 100%
  .ui-content
    position relative
    width 960px
    margin 30px auto

    // サイドバー
    aside.ui-sidebar
      .ui-sidebar-calendar
        hoge 0

    // ページ毎のコンテンツ
    article.ui-article

      // 共通
      .type
        min-height 270px

        // 投稿アイテム一覧ビュー(共通)
        ul.post-items
          list-style none
          margin 0
          padding 0
          background-color header_background
          li
            &.post-item-header
              background-color navi_background
              h2
                margin 0
                padding 5px 20px
                color #fff
                font-size 13px
                font-weight bold
                line-height 24px
                text-shadow 0 -1px rgba(0, 0, 0, .1)
            &.post-item
              position relative
              .item-header
                .ui-calendar-icon
                  position absolute
                  top 20px
                  left 30px
              .item-article
                margin 0 120px 0 100px
                padding 10px 0
                .title
                  margin 0 0 4px
                  a
                    span
                      color font_color
                      font-size 14px
                      font-weight bold
                      line-height 1.2em
                .excerpt
                  &.ellipsis
                    ellipsis()
                  margin 0
                  height 30px
                  color font_color
                  font-size 11px
                  line-height 15px
              .item-footer
                position absolute
                top 20px
                right 20px
                a
                  span
                    font-size 13px

      // トップページ
      .type-front
        .ui-front-news
          hoge 0

      // アーカイブページ
      .type-archive
        hoge 0

      // 記事ページ
      .type-single
        margin-top 80px
        .ui-single
          // 投稿アイテム個別ビュー
          section.post-item
            position relative
            padding 20px 0
            box-shadow inset 0 2px 0 #eee
            article
              header.item-header
                margin-bottom 40px
                .ui-calendar-icon
                  width 42px
                  margin-left -(@width / 2)
                  position absolute
                  top -(@width / 2)
                  left 50%
                .ui-calendar-background
                  height 42px
                  width @height * 2
                  margin-left -(@height * 2  / 2)
                  position absolute
                  top -(@height/ 2)
                  left 50%
                  background #fff
                h1.item-title
                  margin 40px 0 8px
                  font-size 21px
                  font-weight bold
                  line-height 1.4em
                .item-meta
                  hoge 0

      // 静的ページ
      .type-page
        header.header
          h1.title
            hoge 0
        article.article
          h2
            hoge 0
          a
            hoge 0


// メイン
#main
  #primary
    width 960px
    margin 0 auto
    #content
      header
        &.archive-header
          hoge 0
        h1
          padding 4px
          color #5A5A5A
          font-size 14px
          font-style normal
          text-align center
          &.archive-title
            hoge 0
      article
        header.entry-header
          width 960px
          max-width 960px
          h1
            text-align center
        .entry-content
          h2
            color font_color
            font-size 12px
            font-weight bold
            font-style none
            line-height 21px
            text-align center


footer#colophon // .site-footer
  background-color #7A9FA4
  #secondary // .sidebar-container
    background-color #F7F3EC

// Top Button
.scroll
  #top
    opacity .2
#top
  line-height 0
  background black
  border-radius 2px
  position fixed
  bottom 15px
  right 15px
  padding 8px
  text-decoration none
  color white
  opacity 0
  transition opacity .3s
  &:hover
    opacity 1
  img
    width 8px
    height 5px



