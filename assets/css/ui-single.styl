@import 'setting'

/* = 記事ページ
 * ------------------------------------------------------------ */
#contents
  // 投稿アイテム個別ビュー
  .content-item
    &.item-single
      // 画像
      a > img
        display block
        max-width 100%
        width 100%
        height auto
        margin 20px 0 35px

      // 活動レポート
      &.item-report
        // コンテンツ
        padding 20px 45px
        background #fff
        border 1px solid
        border-color #e5e6e9 #dfe0e4 #d0d1d5
        border-radius 3px
        // box-shadow inset 0 1px 0 #fff, 0 -1px 0 #D6D6D6
        header.post-header
          margin-bottom 40px
          padding-bottom 20px
          border-bottom 1px solid #eee
          .ui-calendar
            width 42px
            margin-left -(@width / 2)
            position absolute
            top -(@width / 2)
            left 50%
          // .ui-calendar-background
          //   height 42px
          //   width @height * 2
          //   margin-left -(@height * 2  / 2)
          //   position absolute
          //   top -(@height/ 2)
          //   left 50%
          //   background #fff // background_color
          h1.post-title
            margin 40px 0 8px
            font-size 21px
            font-weight bold
            line-height 1.6em
          .post-meta
            hoge 0
        article.post-article
          .post-body
            margin-bottom 1.1em
            font-size 14px
            line-height 2.2em
            text-indent 1em
            p
              text-align justify
              img
                display block
                width 100%
                height auto
        footer.post-footer
          padding-bottom 60px
          margin-bottom 30px
          box-shadow inset 0 -1px 0 #fff, 0 1px 0 #D6D6D6
          .post-social
            .social
              height 96px
              padding 15px

          .post-navi
            nav.post-recommend
              margin-bottom 60px
            nav.post-navigation
              a
                .meta-nav
                  display block
                  padding 13px
                  color #fff
                  font-size 12px
                  text-align center
                  text-transform uppercase
                  background-color base_color
                  transition all .15s ease
                  button-pink()
                  .fa-angle-double-left
                    padding-right 15px
                  .fa-angle-double-right
                    padding-left 15px
                  &:hover
                    opacity .8


      // プロジェクト
      &.item-project
        // コンテンツ
        clearfix()
        padding 20px
        background-color sub_color
        header.post-header
          clearfix()
          h1.post-title
            margin 10px 0 20px
            text-align center
            span
              padding 10px
              font-size 20px
              font-weight bold
              box-shadow inset 0 -2px darken(sub_color, 10%)
          p.post-description
            margin 0
            padding 20px 0 30px
            font-size 13px
            text-align center
        article.post-article
          .ui-load-event
            position relative
            margin 20px
            margin-right 0
            height 360px
          .post-content
            margin 20px
            text-align justify
            h1
            h2
            h3
            h4
            h5
            h6
              padding-left .7em
              font-size 16px
              font-weight bold
              line-height 1em
              border-left 1em solid #8DB95C
            h1
              border-left-color base_color
            h2
              border-left-color #C54A48
            p
              margin 1.5em 0 2.0em

      // フォトログ
      &.item-photolog
        gallery()

        // コンテンツ
        .post-popup
          clearfix()
          margin-bottom 40px

          .post-right
            background sub_color

          .post-photo
            clearfix()
            overflow hidden
            position relative
            margin 0 -15px
            @media screen and (max-width: 480px)
              height 240px
            @media screen and (min-width: 480px)
              height 320px
            @media screen and (min-width: 768px)
              height 480px

            .ui-load-event
              .post-preview
                contain()
                margin-top 1px
              .post-background
                background-color #000
            .post-navi
              nav.post-navigation
                a
                  span.meta-nav
                    opacity .2
                    position absolute
                    top 50%
                    z-index 300
                    padding 200px 20px
                    color #fff
                    font-size 75px
                    line-height @font-size
                    text-shadow 0 0 3px rgba(0, 0, 0, .75)
                    margin-top - (@font-size/2 + 200)
                    &.meta-nav-next
                      right 0
                      padding-left 100px
                    &.meta-nav-prev
                      left 0
                      padding-right 100px
            &:hover
              .post-navi
                nav.post-navigation
                  a
                    span.meta-nav
                      opacity .35
                      &:hover
                        opacity .65

          .post-content
            clearfix()
            margin-top 20px
            padding 20px
            header.post-header
              min-height 100px
              margin-bottom 15px
              .ui-calendar
                width 42px
                margin-left -(@width / 2)
                position absolute
                top -(@width / 2)
                left 50%
              h1.post-title
                margin 15px 0
                font-size 21px
                font-weight bold
                line-height 1.4em
              .post-meta
                hoge 0
            article.post-article
              min-height 99px
              .post-body
                .excerpt
                  padding-bottom 12px
            footer.post-footer
              .social
                height 96px
                padding 15px
                text-align center
                &:nth-child(1)
                  box-shadow inset -1px 0 0 #fff
                &:nth-child(3)
                  box-shadow inset -1px 1px 0 #fff
                &:nth-child(4)
                  box-shadow inset 0 1px 0 0 #fff

        .post-comments
          clearfix()
          margin-bottom 40px

          .post-right
            background sub_color

          .post-slider
          .post-detail
            clearfix()
            margin-left -15px
            padding-bottom 40px
            border-bottom 1px solid #d7cab7
            margin-bottom 20px

          .post-detail
            border-bottom-width 2px
            h2
              margin 0 0 25px
              color #806640
              font-size 18px
              font-weight 400
            .post-body
              font-size 15px

          .post-comment
            #fb-comments
            .fb-comments
            .fb-comments span
            .fb-comments iframe[style]
            .fb-comments iframe span[style]
              width 100% !important
